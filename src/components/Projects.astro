---
export interface Props {
	title: string
	link: string
	typescript?: boolean
	react?: boolean
	nextjs?: boolean
	astro?: boolean
}

export interface Technologies {
	name: string
	style: string
	exists: boolean
}
const {
	title,
	link,
	typescript = false,
	react = false,
	nextjs = false,
	astro = false
} = Astro.props

const technologies: Array<Technologies> = [
	{
		name: 'html',
		style: 'hover:border-orange-600',
		exists: true
	},
	{
		name: 'css',
		style: 'hover:border-blue-700',
		exists: true
	},
	{
		name: 'javascript',
		style: 'hover:border-yellow-300',
		exists: true
	},
	{
		name: 'tailwindcss',
		style: 'hover:border-sky-400',
		exists: true
	},
	{
		name: 'typescript',
		style: 'hover:border-sky-600',
		exists: typescript
	},
	{
		name: 'react',
		style: 'hover:border-cyan-300',
		exists: react
	},
	{
		name: 'nextjs',
		style: 'hover:border-black',
		exists: nextjs
	},
	{
		name: 'astro',
		style: 'hover:border-orange-600',
		exists: astro
	}
]
---

<li class='h-max rounded-md border' id={title}>
	<div class='border-b p-2'>
		<span class='capitalize'>{title}</span>
		<details>
			<summary class='cursor-pointer text-sm text-neutral-600'
				>Show Technologies</summary
			>
			<ul class='flex flex-wrap gap-2'>
				{
					technologies.map((item) => (
						<li
							class={`w-max rounded-md border-2 border-black ${
								item.style
							} p-1 text-sm capitalize transition-all ${
								!item.exists && 'hidden'
							}`}
						>
							{item.name}
						</li>
					))
				}
			</ul>
		</details>
	</div>
	<div class='flex justify-between p-2'>
		<div></div>
		<a
			href={link}
			target='_blank'
			class='border-neutral-500 text-sm font-bold text-neutral-700 hover:underline'
		>
			View Project
		</a>
	</div>
</li>
